<!--
Summarizes different properties of input-files

 * Count
 * What extensions?
 * File-sizes
 * The pattern can be found among the file-paths
-->
<config>
<bean config-class="org.anchoranalysis.plugin.io.bean.task.SummarizeInputsTask">
    
    <summarizer config-class="org.anchoranalysis.plugin.io.bean.summarizer.input.ExtractPath">
	   <summarizer countThreshold="0" config-class="org.anchoranalysis.plugin.io.bean.summarizer.SummarizerSplitMoreThan">
	   
	       <summarizerGreaterThan avoidBulletOnFirst="true" config-class="org.anchoranalysis.plugin.io.bean.summarizer.SummarizerAggregate">
	           <list config-class="java.util.List" config-factory="list">
	               <item config-class="org.anchoranalysis.plugin.io.bean.summarizer.SummarizerCount"/>
	               <item config-class="org.anchoranalysis.plugin.io.bean.summarizer.path.ExtensionCount"/>
	               <item config-class="org.anchoranalysis.plugin.io.bean.summarizer.path.FileSizeStatistics"/>
	               <item config-class="org.anchoranalysis.plugin.io.bean.summarizer.path.FilePathPattern"/>
	           </list>
	       </summarizerGreaterThan>
	
	       <summarizerElse config-class="org.anchoranalysis.plugin.io.bean.summarizer.SummarizerCount"/>
	   
	   </summarizer>
   </summarizer>
     
</bean>
</config>