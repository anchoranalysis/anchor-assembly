<config>

<experiment config-class="org.anchoranalysis.experiment.bean.io.InputOutputExperiment">

     <input config-class="org.anchoranalysis.plugin.io.bean.input.chnl.NamedChnls">
		 <fileInput config-class="org.anchoranalysis.plugin.io.bean.input.file.Files">
		 	<!--  As no directory is specified, it will look for the input-dirs parameter passed in the input-context -->
		 	<fileProvider acceptDirectoryErrors="true" ignoreHidden="true" recursive="true" config-class="org.anchoranalysis.io.bean.provider.file.FileSet">
		 	    
		 	    <!-- As no extensions or glob are defined, they are both populated from the input-context -->
		 	    <matcher config-class="org.anchoranalysis.io.bean.file.matcher.MatchExtensions">
		 	        <matcher config-class="org.anchoranalysis.io.bean.file.matcher.MatchGlob"/>
		 	    </matcher>
		 	    
		 	</fileProvider>
		 </fileInput>
	  </input>

  	  <experimentIdentifier name="TestDefaultCommandLineExperiment" version="1.0" config-class="org.anchoranalysis.experiment.bean.identifier.ExperimentIdentifierSimple"/>

	  <output config-class="org.anchoranalysis.plugin.io.bean.output.OutputManagerPermissiveExcept" delExistingFolder="false">
		  
		  <filePathPrefixer config-class="org.anchoranalysis.plugin.io.bean.filepath.prefixer.FilePathPrefixerFromDescriptiveName"/>

		  <except config-class="org.anchoranalysis.bean.StringSet" config-factory="stringSet">
			<item>manifest</item>
			<item>manifestExperiment</item>
			<item>config</item>
			<item>executionTime</item>
		  </except>
	  </output>

      <logReporterExperiment filePath="logreporter/experiment.xml" config-class="org.anchoranalysis.experiment.bean.logreporter.LogReporterBean" config-factory="include"/>

      <logReporterTask filePath="logreporter/task.xml" config-class="org.anchoranalysis.experiment.bean.logreporter.LogReporterBean" config-factory="include"/>   
	  
	  <taskProcessor config-class="org.anchoranalysis.experiment.bean.processor.ParallelProcessor" supressExceptions="true">
		  
		  <!--  Default task -->
		  <task filePath="tasks/summarizePaths.xml" config-class="org.anchoranalysis.experiment.task.Task" config-factory="include"/>
		  		  
      </taskProcessor>
	</experiment>
	
</config>